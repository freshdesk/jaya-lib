{
  "name": "@freshworks-jaya/jaya-lib",
  "description": "Collection of libraries for building Freshchat Marketplace Apps",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean --parallel",
    "build": "lerna run build --no-private",
    "watch": "lerna run watch --parallel",
    "test": "lerna run test --no-private --stream --concurrency 1",
    "lint": "eslint '*/**/*.ts' --quiet --fix"
  },
  "devDependencies": {
    "@types/node": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-typescript-sort-keys": "^0.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  }
}
