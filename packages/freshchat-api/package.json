{
  "name": "@freshworks-jaya/freshchat-api",
  "version": "0.7.19",
  "description": "Provides simple interface for accessing Freshchat's public APIs",
  "repository": "git@github.com:freshdesk/jaya-lib.git",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf lib coverage .nyc_output",
    "watch": "tsc --watch --incremental",
    "coverage": "codecov",
    "test": "nyc --reporter=lcov mocha",
    "build": "tsc && cpx \"src/*.hbs\" ./lib",
    "format": "prettier --write \"src/**/*.ts\"",
    "build:check": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' --quiet --fix",
    "prepare": "npm run build",
    "preversion": "npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/html-to-text": "^6.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.6.5",
    "cpx": "^1.5.0",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@freshworks-jaya/utilities": "^0.2.4",
    "axios": "^0.21.1",
    "dayjs": "^1.8.36",
    "handlebars": "^4.7.6",
    "handlebars-helpers": "^0.10.0",
    "html-to-text": "7.0.0"
  }
